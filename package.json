{
  "name": "local-mp-core",
  "description": "Core code for Metrics Platform",
  "version": "0.3.0-rc.1",
  "author": {
    "name": "Pro Q",
    "email": "development@proqsolutions.com",
    "url": "proqsolutions.com"
  },
  "dependencies": {
    "express": "^4.15.4",
    "glob": "^7.1.2",
    "lodash": "^4.16.4",
    "mongoose": "^4.11.12",
    "socket.io": "^1.7.3"
  },
  "devDependencies": {
    "acorn-globals": "^4.0.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "mongoose-mock": "^0.4.0",
    "nyc": "^10.2.0",
    "rewire": "^2.5.2",
    "sinon": "^2.4.1"
  },
  "jshintConfig": {
    "devel": true,
    "esversion": 6,
    "node": true
  },
  "engines": {
    "node": ">=7.0.0"
  },
  "license": "UNLICENSED",
  "main": "index.js",
  "nyc": {
    "include": [
      "libs/**/*.js",
      "index.js"
    ],
    "exclude": [
      "**/test/*.js",
      "**/*-test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://i.proqsolutions.com/git/proq/mp-core"
  },
  "scripts": {
    "cli": "docker run --rm -it -v $PWD:/usr/src/app proq/docker-dev-node /bin/bash -c \"cd /usr/src/app && /bin/bash\"",
    "start": "node index.js",
    "test": "nyc --reporter=html --all mocha test/*-test.js",
    "test-coverage": "docker run --rm -t -v $PWD:/usr/src/app proq/docker-dev-node /bin/bash -c \"cd /usr/src/app && nyc --reporter=html --all mocha test/*-test.js\"",
    "test-watch": "docker run --rm -t -v $PWD:/usr/src/app proq/docker-dev-node /bin/bash -c \"cd /usr/src/app && mocha -w test/*-test.js\""
  }
}
